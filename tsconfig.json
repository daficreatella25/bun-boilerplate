{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "types": ["bun-types"],
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@config/*": ["./config/*"],
        "@schema/*": ["./schema/*"]
      }
    },
    "include": ["src/**/*", "config/**/*", "schema/**/*", "drizzle.config.ts"],
    "exclude": ["node_modules"]
  }